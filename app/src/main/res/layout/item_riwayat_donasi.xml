<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:id="@+id/main_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="false"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:padding="8dp"
                        app:srcCompat="@drawable/ic_book" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@id/icon_image"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="3dp">

                        <TextView
                            android:id="@+id/mJudulBuku"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Judul Buku : Pemrograman I"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/mJumlah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Jumlah : 1"
                            android:textColor="@color/c_black"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/mTamanBaca"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_weight="1"
                            android:backgroundTint="@color/c_black"
                            android:text="Taman Baca : xxxx"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/mPengiriman"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_weight="1"
                            android:backgroundTint="@color/c_black"
                            android:text="Metode Pengiriman : Diantar"
                            android:textSize="10dp" />

                        <LinearLayout
                            android:id="@+id/layoutStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/mStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dikirim"
                                android:textColor="@color/blue"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/indicator"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/shape_indicator_active" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/mSubmit"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:background="@drawable/blue_button_background"
                                android:text="Terima"></Button>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/mTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="02 Jun, 2020 00:51"
                                android:textColor="@color/color_default_black"
                                android:textSize="12sp"
                                android:textStyle="italic" />

                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>